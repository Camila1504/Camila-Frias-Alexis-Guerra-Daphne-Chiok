import turtle

#definiendo las funciones para dibujar el tablero

def draw_box(t,x,y,size,fill_color):
   t.penup()
   t.goto(x,y) 
   t.pendown()

   t.fillcolor(fill_color)
   t.begin_fill()
   
   for i in range(3,9):
     board.forward(size) 
     board.right(90) 

   t.end_fill() 

def draw_board():
   box_color = 'lightblue'
   start_x = 50  
   start_y = -50 
   box_size = 55 
   for i in range(0,13):
     for j in range(0,4):
       draw_box(board,start_x+j*box_size,start_y+i*box_size,box_size,box_color)
       box_color = 'lightblue' if box_color == 'lightgrey' else 'lightgrey'
       
     box_color = 'lightblue' if box_color == 'lightgrey' else 'lightgrey'

#comandos para dibujar el tablero

board = turtle.Turtle()
board.speed(0)
draw_board()
turtle.done()

