#comienzo del juego


#comienzo del juego


x=0
y=0

while x<=14 or y<=14:
  if x>=14:
    print("Gano Tess")
    break
  elif y>=14:
    print("Gano Ben")
    break
  tess.penup()                
  size = 20
  tess.speed(1)
  level_tess = int(input("Del 1 al 5, que nivel de conocimientos crees tener, Tess?: "))
  print "Nivel",level_tess,": La pregunta es la siguiente..."
  print(questions[level_tess][1])
  answer1 = str(input("Respuesta: "))
  if answer1 == answers[level_tess][1]:
    print "Tess avanza", level_tess, "casilla(s)."
    tess.forward(level_tess*55)
    x=x+level_tess
    print(x)
  else:
    print "Lo sentimos, retocede 1 espacio."
    if x>0:
      x=x-1
      tess.forward(-55)
      
  if x>=14:
    print("Gano Tess")  
    break
  elif y>=14:
    print("Gano Ben")
    break
  
  ben.penup()
  size = 20
  ben.speed(1)
  level_ben = int(input("Del 1 al 5, que nivel de conocimientos crees tener, Ben?: "))
  print "Nivel",level_ben,": La pregunta es la siguiente..."
  print(questionsben[level_ben][1])
  answer2 = str(input("Respuesta: "))
  if answer2 == answersben[level_ben][1]:
    print "Ben avanza", level_ben, "casilla(s)."
    ben.forward(level_ben*55)
    y=y+level_ben
  else:
    print "Lo sentimos, retocede 1 espacio."
    if y>0:
      y=y-1
      ben.forward(-55)
  
